#ifndef seed_hh
#define seed_hh

#include <cstdint>
#include <cstddef>

namespace seed_raw_data{

// THIS SECTION IS AUTOMATICALLY GENERATED
const std::uint32_t seeds[] = {
/* __RANDOM_NUMBERS__ */
};
const size_t NUM_SEEDS = 0;

};

std::uint32_t random_seed(std::size_t no) {
    if (no < seed_raw_data::NUM_SEEDS ) 
        return seed_raw_data::seeds [no];
    else
        throw std::runtime_error("There are only so many seeds");
}
   

#endif
